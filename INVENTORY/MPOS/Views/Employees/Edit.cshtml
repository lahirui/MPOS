@model MPOS.App_Context.Employee

@{
    ViewBag.Title = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.HRID)
        @Html.HiddenFor(model => model.EPF)
        @Html.HiddenFor(model => model.FullName)
        @Html.HiddenFor(model => model.CallingName)
        @Html.HiddenFor(model => model.FactoryId)
        @Html.HiddenFor(model => model.IsActive)
        @Html.HiddenFor(model => model.IsDeleted)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreditBalance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreditBalance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}